<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.jack.myapp.demo.video_play.MyVideoPlayer
        android:layout_marginTop="20dp"
        android:id="@+id/jzvdStd"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_height="250dp"/>
<LinearLayout
    android:visibility="gone"
    android:layout_below="@+id/jzvdStd"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/tiny_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Start Tiny Window" />

    <Button
        android:id="@+id/auto_tiny_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Normal ListView TinyWindow" />

    <Button
        android:id="@+id/auto_tiny_list_view_multi_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="MultiHolder ListView TinyWindow" />

    <Button
        android:id="@+id/auto_tiny_list_view_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="RecycleView TinyWindow" />

    <Button
        android:id="@+id/auto_tiny_list_view_recycleview_multiholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="RecycleView MultiHolder TinyWindow" />
</LinearLayout>

</RelativeLayout>